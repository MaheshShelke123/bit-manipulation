#include <stdio.h>
int reverse (int num){
    int rev =0 ;
    int bit;
    for(int i=0;i<32;i++){
        bit = (num>>i)&1;
        rev += bit <<(31-i);
        }
        return rev;
}
 void intToBinary(int num){
    int nums[33] ;
    int total = 0;
    int i = 0;
    while(num > 0){
          nums[i] = num %2;
          num = num/2;
          i++;
    }
    
    for(int j=i-1;j>=0;j--){
        printf("%d",nums[j]);
    }
 }
 
// function to set bit at particular index 
int setBit(int num, int index) {
    return num | (1 << (index - 1));
}

int resetBit(int num, int index) {
    return num & ~(1 << (index - 1));
}

int toggleBit(int num, int index) {
    return num ^ (1 << (index - 1));
}
int main(){
    printf("Enter the integer number : ");
    int num;
    scanf("%d",&num);
    printf("The binary equivalent of the cnumber is : ",intToBinary(num));
    int choice;
    printf("\nEnter the number to your choice among following.... ");
    printf("\n1) Set a particular bit: ");
    printf("\n2) Reset a particular bit: ");
    printf("\n3) Toggle a particular bit: ");
    printf("\n4) Reverse the binary number: ");
    printf("\nEnter your choice here : ");
    scanf("%d",&choice);
    switch(choice){
        case 1:
        printf("enter the index of bit that you want to set : ");
        int index1;
        scanf("%d",&index1);
        printf("The number after setting the particular bit is : %d",setBit(num,index1));
        break;
        
        case 2:
        printf(" Enter the index of bit which you want to reset : ");
        int index2;
        scanf("%d",&index2);
        printf("The number after resetting the particular bit is : %d",resetBit(num,index2));
        break;
        
        case 3:
        printf("Enter the index of bit which you want to Toggle : ");
        int index3;
        scanf("%d",&index3);
        printf("The number after resetting the particular bit is : %d",toggleBit(num,index3));
        break;
        
        case 4:
       printf("The number after reversing its binary representation: %d",reverse(num));
    }
    
    
}
